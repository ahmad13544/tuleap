<h1 class="tlp-framed-horizontally baseline-title-header">
    {{# dgettext }}tuleap-baseline | Baselines administration{{/ dgettext }}
</h1>
<div class="tlp-framed">
    <section class="tlp-pane">
        <div class="tlp-pane-container">
            <div class="tlp-pane-header">
                <h1 class="tlp-pane-title">
                    {{# dgettext }}tuleap-baseline | Permissions{{/ dgettext }}
                </h1>
            </div>
            <form class="tlp-pane-section" action="{{ post_url }}" method="post">
                <div class="tlp-form-element">
                    <label class="tlp-label" for="administrators">
                        {{# dgettext }}
                            tuleap-baseline |
                            User groups who can administrate the baseline service, in addition of project administrators
                        {{/ dgettext }}
                    </label>
                    <select class="tlp-select tlp-select-adjusted" id="administrators" name="administrators[]" multiple>
                        {{# administrators }}
                            <option value="{{ id }}" {{# is_selected }}selected="selected"{{/is_selected}}>
                                {{ name }}
                            </option>
                        {{/ administrators }}
                    </select>
                </div>

                {{# has_readers }}
                <div class="tlp-form-element">
                {{/ has_readers }}
                {{^ has_readers }}
                <div class="tlp-property">
                {{/ has_readers }}
                    <label class="tlp-label" for="readers">
                        {{# dgettext }}
                            tuleap-baseline |
                            User groups who can only read baselines and comparisons
                        {{/ dgettext }}
                    </label>
                    {{# has_readers }}
                        <select class="tlp-select tlp-select-adjusted" id="readers" name="readers[]" multiple>
                            {{# readers }}
                                <option value="{{ id }}" {{# is_selected }}selected="selected"{{/is_selected}}>
                                    {{ name }}
                                </option>
                            {{/ readers }}
                        </select>
                    {{/ has_readers }}
                    {{^ has_readers }}
                        <span class="tlp-property-empty">
                            {{# dgettext }}
                                tuleap-baseline |
                                All user groups are already administrators
                            {{/ dgettext }}
                        </span>
                    {{/ has_readers }}
                </div>

                <div class="tlp-pane-section-submit">
                    {{# csrf_token }}
                        {{> csrf_token_input }}
                    {{/csrf_token}}
                    <button type="submit" class="tlp-button-primary">
                        <i class="fa-regular fa-floppy-disk tlp-button-icon" aria-hidden="true"></i>
                        {{# dgettext }}tuleap-baseline | Save configuration{{/ dgettext }}
                    </button>
                </div>
            </form>
        </div>
    </section>
</div>
